<?xml version="1.0" encoding="utf-8" ?>
<NodeInterface
  id="hcstonecatalogo"
  NodeType="text/html"
  ModelLayout="ContentPage"
	ServerClass="HC4x_Server.PrivateArea.UserArea">
	<NodeHeader>
		<![CDATA[
<div class="empresa-section container-fluid d-flex flex-column justify-content-center align-items-center p-5">
  <img class="imagem-empresa rounded-sm rounded-circle mt-4" src="{hc4x-key:logoCustomer}" alt="wallpaper">
  <h1 class="p-1 text-uppercase text-center text-light mt-2">{hc4x-key:nameCustomer}</h1>
</div>
<div class="row row-cols-1 row-cols-lg-6 row-cols-md-3 row-cols-sm-3 gap-3 py-3">
]]>
	</NodeHeader>
	<NodeContent>
		<![CDATA[		
<div class="col card-products-customer m-5">
    <div class="card h-100" style="width: 20rem;">
        <a href="{hc4x-key:productSlabs}">
				  <img src="{hc4x-key:productCover}" class="card-img-top img-fluid">
        </a>
				<h5 class="card-title">{hc4x-key:description}</h5>
				<a class="btn btn-primary template_url_catalog" href="{hc4x-key:url_template}">Abrir com o hypercube</a>
    </div>
</div>  
]]>
	</NodeContent>
	<NodeFooter>
		<![CDATA[
  <a href="/privatearea/pt/hcstone_cadastrar_produtos/" style="text-decoration: none;" class="text-dark m-5">
    <div class="col">
      <div class="card h-100" style="width: 18rem;">
        <div class="d-flex justify-content-center" style="font-size: 2rem;">
          <i class="bi bi-cart-plus"></i>
        </div>
        <div class="card-body d-flex flex-column align-items-center">
          <h5 class="card-title">Cadastrar produto</h5>
        </div>
      </div>
    </div>
  </a>
</div>
]]>
	</NodeFooter>
</NodeInterface>